# Example Terraform variables - DO NOT commit with real values
# Copy this to terraform.tfvars and fill with your actual values

environment = "dev"  # Change to staging or prod as needed
aws_region  = "us-west-2"
app_name    = "alphamind"

# Network Configuration
vpc_cidr              = "10.0.0.0/16"
availability_zones    = ["us-west-2a", "us-west-2b", "us-west-2c"]
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs  = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]
database_subnet_cidrs = ["10.0.7.0/24", "10.0.8.0/24", "10.0.9.0/24"]

# Security - CHANGE THESE IN PRODUCTION
allowed_cidr_blocks = ["0.0.0.0/0"]  # RESTRICT TO YOUR IP IN PRODUCTION

# Compute
instance_type        = "t3.medium"
key_name             = null  # Your EC2 key pair name
asg_min_size         = 2
asg_max_size         = 10
asg_desired_capacity = 3

# Database - USE SECRETS MANAGER IN PRODUCTION
db_instance_class = "db.t3.medium"
db_name           = "alphamind"
db_username       = "alphamind_user"
db_password       = "CHANGE_THIS_PASSWORD_MIN_12_CHARS"  # Use AWS Secrets Manager

# Monitoring
alert_email_addresses = []  # Add your email addresses
