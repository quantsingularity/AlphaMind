# AlphaMind Backend Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration
DB_USERNAME=root
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=alphamind

# PostgreSQL (Alternative)
POSTGRES_USER=alphamind
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alphamind

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=alphamind

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=alphamind
INFLUXDB_BUCKET=market_data

# API Keys (External Services)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
IEX_CLOUD_API_KEY=your-iex-cloud-key
POLYGON_API_KEY=your-polygon-key
FRED_API_KEY=your-fred-key
BLOOMBERG_API_KEY=your-bloomberg-key

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/alphamind/backend.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Trading Configuration
INITIAL_CAPITAL=100000.0
MAX_POSITION_SIZE=0.1
RISK_FREE_RATE=0.02

# Model Configuration
MODEL_TRAINING_ENABLED=true
MODEL_CACHE_DIR=/tmp/alphamind/models

# Alternative Data
SATELLITE_DATA_ENABLED=false
SEC_FILINGS_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true

# Backtesting
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2023-12-31

# Performance
MAX_WORKERS=4
CACHE_TTL_SECONDS=3600
REQUEST_TIMEOUT_SECONDS=30
